---
import Layout from "../../layouts/Layout.astro";
import MainBanner from "../../components/MainBanner.astro";
import { queryStringToObject } from "../../helpers/queryHelper";
import { products } from "../../constants/data";

let product: any = {};
const queryObject = queryStringToObject(Astro.url);
product = products.find((item) => item.id === Number(queryObject.slug));
---

<Layout title="Explore your aesthetics">
  <main>
    <div class="max-w-screen-xl flex flex-wrap justify-between mx-auto py-4">
      <div class="w-1/2">
        <img class="product-detail-image" src={product?.image} />
      </div>
      <div class="w-1/2">
        <h3 class="font-bold italic text-4xl my-5 text-transform: uppercase">
          {product?.name}
        </h3>
        <p class="my-5">
          {product?.description}
        </p>
      </div>
    </div>
  </main>
</Layout>
<style>
  .product-detail-image {
    height: 35rem;
    object-fit: contain;
  }
</style>
