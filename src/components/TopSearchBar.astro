---
import * as AstroFeather from "astro-feather";
---

<form>
  <label
    for="default-search"
    class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"
    >Search</label
  >
  <div class="relative">
    <input
      type="search"
      id="default-search"
      class="block w-full p-4 text-sm text-gray-900 rounded-lg bg-gray-light focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
      placeholder="Search for items, brands and inspiration..."
      required
    />
    <div
      class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none"
    >
      <AstroFeather.SearchIcon />
    </div>
  </div>
</form>
